{
  "functions": {
    "api/apify-proxy.ts": {
      "maxDuration": 300
    },
    "api/redirect.ts": {
      "maxDuration": 10
    },
    "api/cron-refresh-videos.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/cron-refresh-videos",
      "schedule": "0 */12 * * *",
      "comment": "Production: Every 12 hours"
    }
  ],
  "rewrites": [
    {
      "source": "/l/:shortCode",
      "destination": "/api/redirect?shortCode=:shortCode"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
